WindowManager: 
    
    FirstWindow:
    MainWindow:
    OptionsWindow:
    RuleWindow:


    
<OptionsWindow>
    name : "options"
    canvas.before:
        Rectangle:
            id : optionswall
            pos: self.pos
            size: self.size
            source: 'background.png'
    BoxLayout:
        orientation: "vertical"
        size : root.width , root.height

        spacing : 30 # butonlar arası boşluk
        padding: 40 # kenarlara olan uzaklık
        GridLayout:
            #size :  (0.1,0.9)               # root.width , root.height
            cols : 2
            size_hint : 1,0.3
            Label:
                text:"Oyuncu adınız :"
                font_size:40
            TextInput:
                id : playername
                text:""
                font_size:40


        GridLayout:
            #size :  (0.1,0.9)               # root.width , root.height
            cols : 1
            size_hint : 1,0.3
            Label:
                text:"Oyuncu adınız 7 karakteri geçmemelidir"
                font_size:40
            


        GridLayout:
            #size :  (0.1,0.9)               # root.width , root.height
            cols : 2
            size_hint : 1,0.3
            
            Button:
                text: "Gri tema"
                font_size:50
                size_hint: (0.2,0.2)
                pos_hint: {"x":0.5,"y":0.5}
                on_release:
                    root.gri()
                
                    
                    
                    
            Button:
                text: "Mavi tema"
                font_size:50
                size_hint: (0.2,0.2)
                pos_hint: {"x":0.5,"y":0.5}
                on_release:
                    root.mavi()
                
                    
                    
                    


        GridLayout:
            #size :  (0.1,0.9)               # root.width , root.height
            cols : 1
            size_hint : 1,0.1

            
            Button:
                text: "Geri"
                font_size:50
                size_hint: (0.2,0.2)
                pos_hint: {"x":0.5,"y":0.5}
                on_release:
                    root.nick()
                    app.root.current = "first"
                    root.manager.transition.direction = "right"

<RuleWindow>
    name : "rule"
    canvas.before:
        Rectangle:
            id : rulewall
            pos: self.pos
            size: self.size
            source: 'background.png'
    BoxLayout:
        orientation: "vertical"
        size : root.width , root.height

        spacing : 30 # butonlar arası boşluk
        padding: 40 # kenarlara olan uzaklık
        GridLayout:
            #size :  (0.1,0.9)               # root.width , root.height
            cols : 1
            size_hint : 1,0.8

            Label:
                id :options1
                text: "Oyun Kuralları :"
                font_size : 100
                color : "#FFFFFF"
            Label:
                id :options2
                text: "Kılıç : Makas\nKalkan : Taş\nGladyatör : Kağıt"
                font_size : 60
                color : "#FFFFFF"
            
        GridLayout:
            #size :  (0.1,0.9)               # root.width , root.height
            cols : 1
            size_hint : 1,0.2

            
            Button:
                text: "Geri"
                font_size:50
                size_hint: (0.2,0.2)
                pos_hint: {"x":0.5,"y":0.5}
                on_release:
                    app.root.current = "first"
                    root.manager.transition.direction = "right"

